<!DOCTYPE html>
<html>

<head>
   <meta charset="utf-8">
   <title>To-Do List</title>
   <link rel="stylesheet" href="./list.css">
</head>

<body>
   <form action="/" method="post">
      <input type="text" name="item" id="field" value="" placeholder="Add a todo...">
      <button type="submit">Add todo</button>
   </form>


   {{#todoList}}
   <form action="/complete" method="post">
      {{^complete}}
      <button type="submit" id="mark-comp" name="confirm"  value="{{item}}">Mark Complete</button>
      <p>{{item}}</p>
      {{/complete}}
   </form>
   {{/todoList}}

   <div class="completions"
      <h4>Completed Tasks</h4>
      {{#todoList}}
      {{#complete}}
      <div class="complete">
         <del>{{item}}</del>
      </div>
      {{/complete}}
      {{/todoList}}
   </div>
</body>

</html>
